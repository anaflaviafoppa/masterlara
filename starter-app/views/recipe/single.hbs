



{{#with recipe}}
<h1>{{label}}</h1>
<img src="{{image}}" alt="">

<form method="POST" action="/recipe/{{getID uri}}/recipebook">
  <button>Add Recipe Book</button>
</form>


<p>Servings: {{yield}} people</p>
<p>Calories: {{number calories}}kcal</p>

<h4>Health info</h4>
  <ul>
    {{#each healthLabels}}
    <li>{{this}}</li> 
    {{/each}}
  </ul>

<h4>Ingredients - I dont have - Shop List</h4>

<ul>
{{#each ingredientLines}}
<li>{{this}}</li> 
{{/each}}
</ul>


<h4>INGREDIENTs I have</h4>

<ul>
  {{#each ingredientsStorage}}
    <li>{{this}}</li>
  {{/each}}
</ul>

<br>

<a href={{url}} target="_blank" >SEE MORE</a>

<a href="https://api.whatsapp.com/send?text=Let's%20cook%20{{label}}%20together?%20just%20bring:{{#each ingredientLines}}%0D-%20{{this}}%20{{/each}}%20%0Dxoxo" id="whatsapp-share-btt" rel="nofollow" target="_blank">Invite a friend via WhatsApp</a>

<h4>Comments:</h4>

<form action="/recipe/{{ getID uri }}/comment" method="POST">
<label for="content">Add comment</label>
<input type="text" name="content" id="content" placeholder="Insert comment here...">
<button>Comment</button>
</form>
{{/with}}





{{#each comments}}
<img src="{{userId.picture}} " alt="">
<p><strong>{{userId.name}}</strong></p>
<p>{{content}}</p>

{{#if owner}}

<form action="/recipe/{{recipe}}/comment/{{_id}}/delete" method="POST"><button>Delete comment</button></form>

{{/if}}

{{/each}}

