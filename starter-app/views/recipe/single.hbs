
<section class="container">
  <div class="row">
    {{#with recipe}}

    <!--FIRST COLUMN-->
    <div class="col-md-5">

      <!--
      <form action="/recipe/{{getID uri}}/recipebook" method="POST">
        <button>Add Recipe Book</button>
      </form>-->
     
     <form action="/recipe/{{getID uri}}/recipebook" method="POST">
     
{{#if ../user.isFavorite}}

{{!-- recipe that I like --}}
        <button class="imageLikeSingle">
          <img id="imageLike" src="/images/heart.svg">
        </button>

{{else}}

{{!-- recipe that I don't like --}}
        <button class="imageLikeSingle">
          <img id="imageLike" src="/images/empty-heart.svg">
        </button>

{{/if}}
 
     </form>
     
     
  
      
      <img class="rounded " src="{{image}}" alt="">
    </div><!--/COLUMN-->

     <!--FIRST COLUMN-->
    <div class="col-md-7">
      <h2>{{label}}</h2>

      <!--DESCRIPTION-->
      <div class="row mb-5">
        <div class="col-md">
          <p>Servings: {{yield}} people</p>
        </div>

        <div class="col-md">
          <p>Calories: {{number calories}}kcal</p>
        </div>
      </div>
      <!--/DESCRIPTION-->

      <!--INGREDIENTS-->
      <div class="row">

        <div class="col-md-8">
          <h5>Ingredients</h5>
          <ul>
            {{#each ingredientsStorage}}<!--Ingredients - I have-->
              <li class="my-ingredients">{{this}}</li>
            {{/each}}

            {{#each ingredientLines}}<!--Ingredients - I dont have-->
              <li class="missing-ingredients">{{this}}</li> 
            {{/each}}
          </ul>
        </div><!--/INGREDIENTS-->

        <!--HEALTH INFOS-->
        <div class="col-md-4">
          <h5>Health info</h5>
            <ul>
              {{#each healthLabels}}
              <li>{{this}}</li> 
              {{/each}}
            </ul>
        </div><!--/HEALTH INFOS-->
        
      </div><!--/INGREDIENTS ROW-->
      
      <div class="d-flex justify-content-between">
        <a href={{url}} target="_blank" >SEE MORE</a>
        <a href="https://api.whatsapp.com/send?text=Let's%20cook%20{{label}}%20together?%20just%20bring:{{#each ingredientLines}}%0D-%20{{this}}%20{{/each}}%20%0Dxoxo" id="whatsapp-share-btt" rel="nofollow" target="_blank">Invite a friend via WhatsApp</a>
      </div>
      

    </div><!--/COLUMN-->

    {{/with}}
  </div><!--/ROW-->
  
{{#with recipe}}

  {{!-- <form action="/recipe/{{getID uri}}/recipebook" method="POST">
    <button>Add Recipe Book</button>
  </form> --}}

  <h4>Comments:</h4>
  <div class="row">
      {{>comment}}
  </div>
{{/with}}

</section>

<section class="container">
  
  {{#each comments}}
    {{> userComment}}
  {{/each}}
   
</section>

