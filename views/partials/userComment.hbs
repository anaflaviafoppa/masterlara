
<div class="row py-5">
    <div class="col-3">
      <img class="img-fluid img-circle float-left" src="{{userId.picture}} " alt="">
    </div>

    <div class="col-9 d-flex flex-column">
      <div>
        <h4><strong>{{userId.name}}</strong></h4>
        <p>{{content}}</p>
      </div>
      {{#if owner}}
        <form action="/recipe/{{recipe}}/comment/{{_id}}/delete" method="POST" class="justify-self-end mt-auto"><button>Delete comment</button></form>
      {{/if}}
    </div>
</div>





